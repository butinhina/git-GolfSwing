<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_update_path(@customer) do |f| %>
<table>
  <tr>
    <th>会員ID</th>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <th><%= f.label :氏名 %></th>
    <td><%= f.text_field :last_name %></td>
    <td><%= f.text_field :first_name %></td>
  </tr>
  <tr>
    <th><%= f.label :フリガナ %></th>
    <td><%= f.text_field :last_name_kana %></td>
    <td><%= f.text_field :first_name_kana %></td>
  </tr>
  <tr>
    <th><%= f.label :メールアドレス %></th>
    <td><%= f.email_field :email %></td>
  </tr>
  <tr>
    <th><%= f.label :会員ステータス %></th>
    <td>
      <%= f.radio_button :is_active, "true" %><%= f.label :is_active, "有効" %>
      <%= f.radio_button :is_active, "false" %><%= f.label :is_active, "退会" %>
    </td>
  </tr>
  <tr>
    <th></th>
    <td><%= f.submit "変更を保存"  %></td>
  </tr>
<% end %>
</table>
