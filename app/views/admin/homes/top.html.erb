<div class="container">
<h4 class="text-center text-secondary mt-4">会員一覧</h4>
  <div class="row">
    <div class="col-12 col-sm-10 mx-auto">
      <div class="d-flex flex-column justify-content-center">
<table class="table table-hover mt-3">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.last_name, admin_path(customer.id) %><%= link_to customer.first_name, admin_path(customer.id) %></td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.is_active == true %>
          有効
        <% else %>
          退会
        <% end %>
      </td>
　  </tr>
  <% end %>
  </tbody>
</table>
      </div>
    </div>
  </div>
</div>

