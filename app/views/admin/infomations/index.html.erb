<div class="container">
  <div class="text-center">
  <h4 class="text-secondary mt-4">インフォメーション</h4>
    <div class="row">
      <div class="col-12 mt-3 mx-auto">
        <%= link_to "情報を載せる", new_admin_infomation_path, class:"btn btn-info mb-3" %></br>
        <% @infomations.each do |infomation| %>
          <h5 class="mt-3">
           <%= infomation.created_at.strftime("%Y/%m/%d") %>
           <%= infomation.content %>
           <%= link_to "編集", edit_admin_infomation_path(infomation.id) %>
           <%= link_to "削除", admin_infomation_path(infomation.id), method: :delete, class:"text-danger" %>
          </h5>
        <% end %>
      </div>
    </div>
  </div>
</div>
