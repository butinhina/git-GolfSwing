<div class="container">
  <h4 class="text-center text-secondary mt-4 mb-3">インフォメーション作成</h4>
  <%= form_with model: @infomation, url: admin_infomations_path, method: :post do |f| %>
  <div class="row">
    <div class="col-12 col-sm-6 col-md-4 mx-auto">
      <div class="d-flex flex-column justify-content-center">
        <%= f.text_area :content, rows: 5, class:"form-control"%>
      </div>
      <div class="actions text-center mt-3">
        <%= f.submit "保存" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
