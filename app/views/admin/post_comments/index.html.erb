<h2>コメント一覧</h2>
<table>
  <thead>
    <tr>
      <th>コメント日時</th>
      <th>アイコン</th>
      <th>氏名</th>
      <th>コメント内容</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @post_comments.each do |post_comment| %>
    <tr>
      <td><%= post_comment.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
      <td><%= image_tag post_comment.customer.get_profile_image(40,40) %></td>
      <td><%= post_comment.customer.last_name %><%= post_comment.customer.first_name %></td>
      <td><%= post_comment.comment %></td>
      <td><%= link_to "削除", admin_post_comment_path(post_comment.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>





