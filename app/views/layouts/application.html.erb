<!DOCTYPE html>
<html>
  <head>
    <title>GolfSwing</title>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand pl-0" href="/"><%= image_tag('GolfSwing-logo.jpeg') %></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
            ようこそ、<%= current_customer.first_name %>さん！
          <div class= "search-form">
            <%= form_with url: search_public_post_videos_path, method: :get, local: true do |f| %>
              <%= f.text_field :keyword, value: @keyword %>
              <%= f.submit "検索" %>
            <% end %>
          </div>
            <li class="nav-item">
              <%= link_to "投稿する",  new_public_post_video_path %>
            </li>

            <li class="nav-item">
              <%= link_to "下書き一覧",  confirm_public_post_videos_path %>
            </li>

            <li class="nav-item">
              <%= link_to "About", public_about_path %>
            </li>

            <li class="nav-item">
              <%= link_to "マイページ", public_path(current_customer.id) %>
            </li>

            <li class="nav-item">
              <%= link_to "みんなのスウィング", public_post_videos_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ブックマーク一覧", bookmarks_public_post_videos_path %>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
            </li>
            <% elsif admin_signed_in? %>
            <li class="nav-item">
              <%= link_to "会員一覧", admin_root_path %>
            </li>
            <li class="nav-item">
              <%= link_to "コメント一覧", admin_post_comments_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
            </li>
            <li class="nav-item">
              <%= link_to "インフォメーション", admin_infomations_path %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to "About", public_about_path %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_customer_registration_path %>
            </li>
            <li class="nav-item">
              <%= link_to "みんなのスウィング", public_post_videos_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_customer_session_path %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight GolfSwing.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
