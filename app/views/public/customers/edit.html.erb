<h2>会員情報編集</h2>
  <table>
   <%= form_with model: @customer, url: public_customers_information_path(@customer.id), method: :patch do |f| %>
    <tr>
      <th>名前</th>
      <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email %></td>
    </tr>
    <td>〜ここからプロフィール内容として使用〜</td>
    <tr>
      <th>プロフィール画像</th>
      <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
    </tr>
    <tr>
      <th>ニックネーム</th>
      <td><%= f.text_field :nickname %></td>
    </tr>
    <tr>
      <th>身長</th>
      <td><%= f.text_field :height %>cm</td>
    </tr>
    <tr>
      <th>生年月日</th>
      <td><%= f.text_field :birth_dat %></td>
    </tr>
    <tr>
      <th>持ち球</th>
      <td><%= f.text_field :holding_ball %></td>
    </tr>
    <tr>
      <th>ゴルフ歴</th>
      <td><%= f.text_field :history %>年</td>
    </tr>
    <tr>
      <th>得意クラブ</th>
      <td><%= f.text_field :forte_club %></td>
    </tr>
    <tr>
      <th>ひとこと</th>
      <td><%= f.text_field :message %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit "変更内容を保存" %></td>
      <td><%= link_to "退会する", public_customers_unsubscribe_path %></td>
    </tr>
   <% end %>
  </table>