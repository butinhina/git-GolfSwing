<div class="container">
  <h4 class="text-center text-secondary mt-4">Member information</h4>
  <% if @customer.errors.any? %>
    <%= @customer.errors.count %>件のエラーが発生しました
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model: @customer, url: public_customer_path(@customer.id), method: :patch do |f| %>
    <div class="w-75 mx-auto">
      <div class="d-flex flex-column justify-content-center">
          <div class="row border mt-3">
            <div class="col-12 col-md-4 bg-light py-2"><%= f.label :名前 %><span class="text-danger">［必須］</span></div>
            <div class="col-12 col-md-8 py-2"><%= f.text_field :last_name %> <%= f.text_field :first_name %></div>
          </div>
          <div class="row border">
            <div class="col-12 col-md-4 bg-light py-2"><%= f.label :フリガナ %><span class="text-danger">［必須］</span></div>
            <div class="col-12 col-md-8 py-2"><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></div>
          </div>
          <div class="row border">
            <div class="col-12 col-md-4 bg-light py-2"><%= f.label :メールアドレス %><span class="text-danger">［必須］</span></div>
            <div class="col-12 col-md-8 py-2"><%= f.email_field :email %></div>
          </div>
          <div>
            <div class="row border justify-content-center text-secondary">〜ここからプロフィール内容として使用〜</span></div>
          </div>
          <div class="row border">
            <div class="col-12 col-md-4 bg-light py-2"><%= f.label :プロフィール画像 %></div>
            <div class="col-12 col-md-8 py-2"><%= f.file_field :profile_image, accept: "image/*" %></div>
          </div>
          <div class="row border">
            <div class="col-12 col-md-4 bg-light py-2"><%= f.label :ニックネーム %><span class="text-danger">［必須］</span></div>
            <div class="col-12 col-md-8 py-2"><%= f.text_field :nickname %></div>
          </div>
          <div class="row border">
            <div class="col-12 col-md-4 bg-light py-2"><%= f.label :身長 %></div>
            <div class="col-12 col-md-8 py-2"><%= f.text_field :height %>cm</div>
          </div>
         <div class="row border">
            <div class="col-12 col-md-4 bg-light py-2"><%= f.label :生年月日 %></div>
            <div class="col-12 col-md-8 py-2"><%= f.text_field :birth_dat %></div>
          </div>
          <div class="row border">
            <div class="col-12 col-md-4 bg-light py-2"><%= f.label :持ち球 %></div>
            <div class="col-12 col-md-8 py-2"><%= f.text_field :holding_ball %></div>
          </div>
          <div class="row border">
            <div class="col-12 col-md-4 bg-light py-2"><%= f.label :ゴルフ歴 %></div>
            <div class="col-12 col-md-8 py-2"><%= f.text_field :history %>年</div>
          </div>
          <div class="row border">
            <div class="col-12 col-md-4 bg-light py-2"><%= f.label :得意クラブ %></div>
            <div class="col-12 col-md-8 py-2"><%= f.text_field :forte_club %></div>
          </div>
          <div class="row border">
            <div class="col-12 col-md-4 bg-light py-2"><%= f.label :ひとこと %></div>
            <div class="col-12 col-md-8 py-2"><%= f.text_field :message %></div>
          </div>
          <div class="text-center">
            <%= f.submit "変更内容を保存", class:"mt-3" %></br>
            <%= link_to "退会する", public_customer_unsubscribe_path(@customer.id), class:"btn btn-danger btn-sm mt-4" %></p>
          </div>
      </div>
    </div>
  <% end %>
</div>