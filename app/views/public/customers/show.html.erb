<div class="container">
  <%= notice %>
  <div class="row">
   <div class="col-8 col-md-9 mt-4 mx-auto mb-2" >
     <%= render 'list', customer: @customer %>
   </div>
   <% if @customer == current_customer %>
    <div class="col-8 col-md-3 align-self-center mx-auto">
    <!--MySwingのキーワード検索欄  -->
     <%= form_with url: my_search_public_post_videos_path, method: :get, local: true do |f| %>
      <%= f.text_field :keyword, value: @keyword, placeholder: "My_swing Search", class:"form-control" %>
     <% end %>
    </div>

   <% end %>
  </div>
  <p class="text-center">※スマートフォンでは、再生ボタンを押すと動画が再生されます。</p>
  <div class="row">
   <div class="col-12 col-md-9 d-flex flex-wrap mt-3 ">
    <!--current_customerの投稿一覧-->
    <%= render 'public/post_videos/index', post_videos: @post_videos %>
   </div>
    <!--current_customerであればMy_Swingのタグ検索機能表示-->
    <% if @customer == current_customer %>
      <%= render 'public/post_videos/list_2' %>
    <% end %>
  </div>
  <div class="pagination justify-content-center pagination-sm"><%= paginate @post_videos %></div>
</div>

