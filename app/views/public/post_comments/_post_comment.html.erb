<% if post_video.post_comments.present? %>
<p>コメント件数:<%= post_video.post_comments.count %></p>
      <% post_video.post_comments.each do |post_comment| %>
      <table>
        <%= link_to public_customer_path(post_comment.customer.id) do %>
         <%= image_tag post_comment.customer.get_profile_image(30,30), class:"rounded-circle"; %>
        <% end %>
        <%= post_comment.customer.nickname %>
        <%= post_comment.comment %>
        <span class="text-secondary"><%= post_comment.created_at.strftime("%Y-%m-%d") %></span>
        <% if post_comment.customer == current_customer %>
          <%= link_to "削除", public_post_video_post_comment_path(post_video, post_comment), class: 'js-delete-comment-button', method: :delete, remote: true %>
        <% end %>
      </table>
      <% end %>
<% else %>
  <p>コメントはまだありません</p>
<% end %>