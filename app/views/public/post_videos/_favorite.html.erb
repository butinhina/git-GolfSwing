<% if post_video.favorited_by?(current_customer) %>
  <%= link_to public_post_video_favorites_path(post_video), method: :delete, remote: true, class:"text-danger" do %>
    <i class="fas fa-heart"></i>️<%= post_video.favorites.count %>いいね
  <% end %>
<% else %>
  <%= link_to public_post_video_favorites_path(post_video), method: :post, remote: true do %>
    <i class="far fa-heart"></i><%= post_video.favorites.count %>いいね
  <% end %>
<% end %>