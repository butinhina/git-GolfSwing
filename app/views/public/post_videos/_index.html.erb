<% post_videos.each do |post_video| %>
  <div class="card border-0 text-center mx-auto">
    <%= video_tag rails_blob_path(post_video.get_video), :width => "180", :height => "100" %>
    <div class="card-body">
    <%= link_to public_post_video_path(post_video.id) do %>
      <%= post_video.created_at.strftime("%Y-%m-%d") %>
    <% end %>
    </div>
  </div>
<% end %>
