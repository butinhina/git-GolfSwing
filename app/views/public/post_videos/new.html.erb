<h2>動画投稿</h2>
<%= render 'error_messages', post_video: @post_video %>
<%= form_with model: @post_video, url: public_post_videos_path, method: :post do |f| %>
  <div class="field">
    <%= f.label :スウィング動画 %>
    <%= f.file_field :video %>
  </div>
  <div class="field">
    <%= f.label :レポート文 %>
    <%= f.text_area :report, rows: 5 %>
  </div>
  <div class="form-group">
    <%= f.label :タグ付け %>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
        <%= tag.label {tag.check_box + tag.text} %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.select :status, PostVideo.statuses.keys.map { |k| [t("enums.post_video.status.#{k}"), k] }, {} %>
  </div>
  <div class="actions">
    <%= f.submit "投稿" %>
  </div>
<% end %>