<div class="container">
  <h4 class="text-center text-secondary mt-4">Sign up</h4>
  <%= render "public/shared/error_messages", resource: resource %>
  <%= form_with model: @customer, url: customer_registration_path do |f| %>
  <div class="w-75 mx-auto">
    <div class="d-flex flex-column justify-content-center">
      <p class="text-danger text-center">※は必須項目です</p>
    <table class= "table table-bordered">
      <tr class="row mx-auto">
        <th class="col-12 col-md-4 bg-light">
          <%= f.label :名前 %><span class="text-danger">※</span>
        </th>
        <td class="col-12 col-md-8">
          <%= f.text_field :last_name, :placeholder => "姓" %> <%= f.text_field :first_name, :placeholder => "名" %>
        </td>
      </tr>
      <tr class="row mx-auto">
        <th class="col-12 col-md-4 bg-light">
          <%= f.label :フリガナ %><span class="text-danger">※</span>
        </th>
        <td class="col-12 col-md-8">
          <%= f.text_field :last_name_kana, :placeholder => "セイ" %> <%= f.text_field :first_name_kana, :placeholder => "メイ" %>
        </td>
      </tr>
      <tr class="row mx-auto">
        <th class="col-12 col-md-4 bg-light">
          <%= f.label :メールアドレス %><span class="text-danger">※</span>
        </th>
        <td class="col-12 col-md-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </td>
      </tr>
      <tr class="row mx-auto">
        <th class="col-12 col-md-4 bg-light">
          <%= f.label :パスワード（６文字以上） %><span class="text-danger">※</span>
        </th>
        <td class="col-12 col-md-8">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </td>
      </tr>
      <tr class="row mx-auto">
        <th class="col-12 col-md-4 bg-light">
          <%= f.label :パスワード（確認用） %><span class="text-danger">※</span>
        </th>
        <td class="col-12 col-md-8">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </td>
      </tr>
      <td class="text-center">〜ここからプロフィール内容として使用〜</td>
      <tr class="row mx-auto">
        <th class="col-12 col-md-4 bg-light">
          <%= f.label :プロフィール画像 %>
        </th>
        <td class="col-12 col-md-8">
          <%= f.file_field :profile_image, accept: "image/*" %>
        </td>
      </tr>
      <tr class="row mx-auto">
        <th class="col-12 col-md-4 bg-light">
          <%= f.label :ニックネーム %><span class="text-danger">※</span>
        </th>
        <td class="col-12 col-md-8">
          <%= f.text_field :nickname %>
        </td>
      </tr>
      <tr class="row mx-auto">
        <th class="col-12 col-md-4 bg-light">
          <%= f.label :生年月日 %>
        </th>
        <td class="col-12 col-md-8">
          <%= f.text_field :birth_dat %>
        </td>
      </tr>
      <tr class="row mx-auto">
        <th class="col-12 col-md-4 bg-light">
          <%= f.label :持ち球 %>
        </th>
        <td class="col-12 col-md-8">
          <%= f.text_field :holding_ball %>
        </td>
      </tr>
      <tr class="row mx-auto">
        <th class="col-12 col-md-4 bg-light">
          <%= f.label :ゴルフ歴 %>
        </th>
        <td class="col-12 col-md-8">
          <%= f.text_field :history %>年
        </td>
      </tr>
      <tr class="row mx-auto">
        <th class="col-12 col-md-4 bg-light">
          <%= f.label :得意クラブ %>
        </th>
        <td class="col-12 col-md-8">
          <%= f.text_field :forte_club %>
        </td>
      </tr>
      <tr class="row mx-auto">
        <th class="col-12 col-md-4 bg-light">
          <%= f.label :ひとこと %>
        </th>
        <td class="col-12 col-md-8">
          <%= f.text_field :message %>
        </td>
      </tr>
    </table>
      <div class="text-center">
        <div class="actions">
          <%= f.submit "新規登録", class:"mt-3" %>
        </div>
        <p class="mt-5">既に登録済みの方</p>
        <p class="mt-3"><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p>
      </div>
    </div>
  </div>
<% end %>
</div>